<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/camera_resolution_editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="27sp"
        android:text="@string/camera_resolution_text"></TextView>

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#00008b">
    <Spinner
        android:id="@+id/camera_resolution_spinner"
        app:layout_constraintStart_toEndOf="@id/camera_resolution_editText"
        app:layout_constraintTop_toBottomOf="@id/id_layout"
        android:layout_width="140dp"
        android:layout_height="35dp"

        android:popupBackground="#00008b"
        style="@style/Spinner"
        android:spinnerMode="dropdown" />
    </LinearLayout>
</LinearLayout>